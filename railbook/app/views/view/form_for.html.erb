<%= form_for(@book) do |f| %>
  <div class="field">
    <%= f.label :isbn %><br />
    <%= f.text_field :isbn, size: 25 %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, size: 25 %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :publish %><br />
    <%= f.text_field :publish, size: 25 %>
  </div>
  <div class="field">
    <%= f.label :published %><br />
    <%= f.date_select :published %>
  </div>
  <div class="field">
    <%= f.label :dl %><br />
    <%= f.check_box :dl %>
  </div>
  <div class="actions">
    <%= f.submit '登録' %>
  </div>
<% end %>
