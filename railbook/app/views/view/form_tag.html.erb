<%= form_tag(controller: :books, action: :create) do %>
  <div class="field">
    <%= label :book, :isbn %><br />
    <%= text_field :book, :isbn, size: 25 %><br />
  </div>
  <div class="field">
    <%= label :book, :title %><br />
    <%= text_field :book, :title, size: 25 %><br />
  </div>
  <div class="field">
    <%= label :book, :price %><br />
    <%= number_field :book, :price %>
  </div>
  <div class="field">
    <%= label :book, :publish %><br />
    <%= text_field :book, :publish, size: 25 %>
  </div>
  <div class="field">
    <%= label :book, :published %><br />
    <%= date_select :book, :published %>
  </div>
  <div class="field">
    <%= label :book, :dl %><br />
    <%= check_box :book, :dl %>
  </div>
  <div class="actions">
    <%= submit_tag '登録' %>
  </div>
<% end %>
