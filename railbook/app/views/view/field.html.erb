<%= form_for(@book) do |f| %>
  <div class="field">
    テキストボックス:<br>
    <%= f.text_field :isbn, size: 20, maxlength: 25, readonly: true %><br>
  </div>
  <div class="field">
    パスワードボックス:<br>
    <%= f.password_field :isbn, size: 20, maxlength: 25, disabled: true %><br>
  </div>
  <div class="field">
    テキストエリア:<br>
    <%= f.text_area :isbn, col: 40, rows: 10 %><br>
  </div>
  <div class="field">
    ラジオボタン:<br>
    <label><%= f.radio_button :publish, '技術評論社', class: :rd %>技術評論社<label>
    <label><%= f.radio_button :publish, '翔泳社', class: :rd %>翔泳社<label>
    <label><%= f.radio_button :publish, '日経BP', class: :rd %>日経BP<label>
  </div>
  <div class="field">
    <label>
      <%= f.check_box :dl, { class: 'chk' }, 'yes', 'no' %>ダウンロードサンプルあり？
    </label>
  </div>
<% end %>
